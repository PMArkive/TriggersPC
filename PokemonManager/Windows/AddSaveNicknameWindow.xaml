<Window x:Class="PokemonManager.Windows.AddSaveNicknameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonManager.Windows"
        mc:Ignorable="d"
        Title="Save Nickname" Height="117" Width="240" ResizeMode="NoResize" Icon="/TriggersPC;component/Resources/Icons/IconEditNickname.png" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid>
        <TextBox x:Name="textBoxName" MaxLength="40" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" Text="Trigger's PC" VerticalAlignment="Top" TextChanged="OnNicknameChanged" PreviewKeyDown="OnEnterPressed"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" IsDefault="True" Background="#FF007ACC" Foreground="White" FontWeight="Bold" Click="OKClicked" FontSize="11" Focusable="False" IsTabStop="False"/>
        <Button Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Background="#FF007ACC" Foreground="White" FontWeight="Bold" FontSize="11" IsCancel="True" Focusable="False" IsTabStop="False"/>

    </Grid>
</Window>
