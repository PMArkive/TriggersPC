<Window x:Class="PokemonManager.Windows.ItemCountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:PokemonManager.Windows"
        Title="Item Count" Height="125" Width="180" Loaded="OnWindowLoaded" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Icon="/TriggersPC;component/Resources/Empty.png" ShowInTaskbar="False">
    <Grid>
        <local:NumericUpDown x:Name="numericUpDown" Margin="10,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Width="Auto" ValueChanged="OnValueChanged" Minimum="0"/>
        <Button Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="60" FontSize="11" Click="Button_Click" IsCancel="True" Grid.ColumnSpan="2" Foreground="White" Background="#FF007ACC" FontWeight="Bold" Focusable="False" IsTabStop="False"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="60" FontSize="11" IsDefault="True" Click="OnOKClicked" Background="#FF007ACC" FontWeight="Bold" Foreground="White" Focusable="False" IsTabStop="False"/>
    </Grid>
</Window>
