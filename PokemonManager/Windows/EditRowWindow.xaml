<Window x:Class="PokemonManager.Windows.EditRowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditRowWindow" Height="135" Width="300" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Icon="/TriggersPC;component/Resources/Empty.png">
    <Grid>
        <TextBox x:Name="textBoxName" MaxLength="30" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" Text="Row 1" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBoxLivingDex" Content="Living Dex Mode" HorizontalAlignment="Left" Margin="21,41,0,0" VerticalAlignment="Top" ClickMode="Press"/>
        <Button Content="Close" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" FontSize="11" Foreground="White" FontWeight="Bold" Background="#FF007ACC" Focusable="False" IsTabStop="False" IsCancel="True"/>
        <Button x:Name="buttonOK" Content="Add Row" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" FontSize="11" Click="OnOKClicked" Foreground="White" FontWeight="Bold" Background="#FF007ACC" Focusable="False" IsTabStop="False" IsDefault="True"/>
        <CheckBox x:Name="checkBoxRevealEggs" Content="Show Egg Species" HorizontalAlignment="Left" Margin="144,41,0,0" VerticalAlignment="Top" ClickMode="Press"/>

    </Grid>
</Window>
