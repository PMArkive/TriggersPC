<Window x:Class="PokemonManager.Windows.PokerusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Infect Pokémon" Height="152" Width="260" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" Icon="/TriggersPC;component/Resources/Icons/IconPokerus.png" UseLayoutRounding="True">
    <Grid>
        <ComboBox x:Name="comboBoxPokerus" Margin="10,10,10,0" VerticalAlignment="Top" SelectionChanged="OnStrainSelectionChanged"/>
        <Label Margin="10,37,10,0" VerticalAlignment="Top" Height="56" Width="234" IsHitTestVisible="False">
            <TextBlock x:Name="textBlockDays" TextWrapping="Wrap" Text="This strain will last for 4 days." FontWeight="Bold"/>
        </Label>
        <Button Content="OK" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" IsDefault="True" Background="#FF007ACC" Foreground="White" FontWeight="Bold" Click="OKClicked" FontSize="11" Focusable="False" IsTabStop="False"/>
        <Button Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Background="#FF007ACC" Foreground="White" FontWeight="Bold" FontSize="11" IsCancel="True" Focusable="False" IsTabStop="False"/>

    </Grid>
</Window>
