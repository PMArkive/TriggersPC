<Window x:Class="PokemonManager.Windows.SaveManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Manager" Height="380" Width="280" ResizeMode="NoResize" Icon="/TriggersPC;component/Resources/Icons/IconManageSaves.png" Closing="OnWindowClosing" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid>
        <ListView x:Name="listViewGameSaves" Margin="10,11,10,47" SelectionChanged="OnSelectionChanged"/>
        <Button Content="Close" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" FontSize="11" Foreground="White" FontWeight="Bold" Background="#FF007ACC" Focusable="False" IsTabStop="False" IsCancel="True"/>
        <Button Content="Add Save" HorizontalAlignment="Right" Margin="0,0,101,10" VerticalAlignment="Bottom" Width="75" FontSize="11" Click="OnAddSaveClicked" Foreground="White" FontWeight="Bold" Background="#FF007ACC" Focusable="False" IsTabStop="False"/>

    </Grid>
</Window>
